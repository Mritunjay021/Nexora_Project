# Server environment variables (copy to .env and fill values)

# Server
PORT=5000
NODE_ENV=development

# Database (the server appends /greencart) - set to your MongoDB connection prefix
MONGODB_URI=mongodb://localhost:27017

# JWT
JWT_SECRET=your_jwt_secret_here

# Seller credentials (used by /api/seller/login)
SELLER_EMAIL=seller@example.com
SELLER_PASSWORD=verysecurepassword

# Cloudinary (required if uploading product images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Stripe (required for online payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Gemini API key for geminiMCPServer.js
GEMINI_API_KEY=your_gemini_api_key_here
